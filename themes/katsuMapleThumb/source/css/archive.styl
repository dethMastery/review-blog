.posts
  margin: auto
  max-width: global-max-width
  font-size: 1rem
  line-height: 1.75
  h2
    margin: 0
    margin-top: 1rem
  ul
    list-style: none
    margin: 0
    padding: 0
    li
      width: 100%
      border-radius: 1rem
      background-position: center !important
      background-size: cover !important
      background-repeat: no-repeat !important
      margin: 0
      text-decoration: none
      div.post-container
        text-decoration: none
        margin: 0
        background: rgba(0,0,0,0.4)
        padding: 2rem 1rem
        border-radius: 1rem
        backdrop-filter: blur(.5rem);
        .title
          color: whitesmoke
          font-weight: bold
        

.time
  color: #D2D2D2
